<h1>Listing mappings</h1>

<table>
  <thead>
    <tr>
      <th>Meme</th>
      <th>Keyword</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mappings.each do |mapping| %>
      <tr>
        <td><%= mapping.meme_id %></td>
        <td><%= mapping.keyword_id %></td>
        <td><%= link_to 'Show', mapping %></td>
        <td><%= link_to 'Edit', edit_mapping_path(mapping) %></td>
        <td><form action="/delete_mapping/<%= mapping.id%>" method="post"><button>Delete</button></form></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mapping', new_mapping_path %>
